@model Core.DTOs.CreatePersonelViewModel

@{
    ViewData["Title"] = "Yeni Personel Oluştur";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded">
        <div class="card-header text-white" style="background-color: #466784;">
            <h5 class="mb-0">Yeni Personel Oluştur</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreatePersonel" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="SicilNo" class="form-label">Sicil No</label>
                    <input asp-for="SicilNo" class="form-control" />
                    <span asp-validation-for="SicilNo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Adi" class="form-label">Adı</label>
                    <input asp-for="Adi" class="form-control" />
                    <span asp-validation-for="Adi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Soyadi" class="form-label">Soyadı</label>
                    <input asp-for="Soyadi" class="form-control" />
                    <span asp-validation-for="Soyadi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Unvan" class="form-label">Unvanı</label>
                    <input asp-for="Unvan" class="form-control" />
                    <span asp-validation-for="Unvan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sifre" class="form-label">Şifre</label>
                    <input asp-for="Sifre" type="password" class="form-control" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsAdmin" class="form-check-input" id="isAdminCheck" />
                    <label asp-for="IsAdmin" class="form-check-label" for="isAdminCheck">Yönetici mi?</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Kaydet</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
